<!DOCTYPE html>
<html lang="pr-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Pokedéx | Home</title>
</head>

<body>
    <nav>
        <article>
        <img src="/img/pokebola.png" class="logo pagina" alt="Logo Pokedex">
        <h1><a href="/">Pokedéx</a></h1>
        </article>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/cadastro">Cadastro</a>
            </li>
        </ul>
    </nav>

    <header>
        <article>
            <h1>Pokedéx</h1>
        </article>
    </header>

    <section id="pokedex">
        <% bicho.forEach((item, contador) => { %>
            <a class="card" href="/detalhes/<%= contador %>">
                <img src="<%= item.imagem %>">
                <h2><%= item.nome %></h2>
                <h4><%= item.tipo %></h4>
            </a>
        <% }) %>
    </section>

    <% if(message != "") {  %>
        <section id="message">
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
    <% }  %>

    <script src="/js/script.js"></script>
</body>

</html>
